function save-keeper ($name="",$context=1,[switch]$ShowDateTime=$false,$keeperFile="~/keeper.txt",[switch]$debug=$false) {

    if ($debug) {write-output "function is '$name', context is $context, ShowDateTime is $ShowDateTime, file is '$keeperFile'"}
    if ($ShowDateTime) {
	$theDate=get-date
	Write-Output $theDate | Out-File -append $keeperFile
    }
    $keeper=Get-History | select-object -Last $context -ExpandProperty CommandLine
    if ($name -eq "") {
      write-output $keeper | Out-File -append $keeperFile
    } else {
      $keeperfunc="function $name {`n$keeper`n}"
      write-output $keeperfunc | Out-File -append ~/keeper.txt
    }
}
